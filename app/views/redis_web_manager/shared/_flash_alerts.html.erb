<div class="container">
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> alert-dismissible fade show" role="alert">
      <span><%= value %></span>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>
